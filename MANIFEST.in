# Include all files in src directory
recursive-include src *

# Exclude the scriptengine directory
prune src/codesys_bridge/scriptengine

# Include documentation files
include README.md
include LICENSE*
include requirements.txt

# Exclude common development files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib
global-exclude .git*
global-exclude .DS_Store 